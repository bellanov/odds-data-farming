{
  "name": "odds-data-farming",
  "version": "0.4.1",
  "description": "Scripts responsible for farming odds data.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf data; mkdir data; rm -rf *.log;",
    "docker": "npm run docker-teardown; npm run docker-build; npm run docker-deploy;",
    "docker-build": "scripts/cicd/build.sh",
    "docker-deploy": "scripts/cicd/deploy.sh",
    "docker-teardown": "scripts/cicd/teardown.sh",
    "format": "npx prettier . --write",
    "k8s-apply-events": "kubectl apply -f k8s/events/",
    "k8s-apply-events-config": "k8s/events/configmaps.sh",
    "k8s-apply-football": "kubectl apply -f k8s/football/",
    "k8s-apply-football-config": "k8s/football/configmaps.sh",
    "k8s-cron-jobs": "scripts/k8s/cron_jobs.sh",
    "k8s-create-cluster": "scripts/minikube/create_cluster.sh",
    "k8s-delete-cluster": "scripts/minikube/delete_cluster.sh",
    "k8s-enable-addons": "scripts/minikube/enable_addons.sh",
    "k8s-delete-football": "kubectl delete -f k8s/football/",
    "k8s-list": "minikube profile list; kubectl get namespaces; kubectl get pods --all-namespaces",
    "k8s-metrics": "minikube addons enable metrics-server",
    "lint": "npx eslint; scripts/cicd/lint.sh; npx prettier . --check",
    "odds-account": "npm run clean; scripts/bin/account.sh",
    "odds-events": "npm run clean; scripts/bin/events.sh",
    "odds-sports": "npm run clean; scripts/bin/sports.sh",
    "odds-event-odds": "npm run clean; scripts/bin/eventOdds.sh",
    "test": "jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bellanov/odds-data-scraping.git"
  },
  "author": "Bellanov Apilli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bellanov/odds-data-scraping/issues"
  },
  "homepage": "https://github.com/bellanov/odds-data-scraping#readme",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "firebase": "^12.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jasmine": "^5.9.0",
    "prettier": "3.6.2"
  }
}
